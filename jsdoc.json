{
  "source": {
    "include": ["src"],
    "includePattern": ".+\\.(js|jsx|ts|tsx)$",
    "excludePattern": "(node_modules/|docs/|test/)"
  },
  "opts": {
    "destination": "./docs-generated",
    "recurse": true,
    "readme": "./README.md",
    "template": "default",
    "encoding": "utf8"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true,
    "default": {
      "outputSourceFiles": true,
      "includeDate": true
    }
  },
  "markdown": {
    "hardwrap": false,
    "idInHeadings": true
  }
}
